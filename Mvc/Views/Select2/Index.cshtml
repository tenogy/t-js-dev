@using Tjs.Web
@model Mvc.Models.Select2Model
@{
	ViewBag.Title = "Test list";
	ViewBag.PageClass = "content-page";
}

<div id="select2Page" class="page-content">
	<h1>Test select2</h1>
	<div class="content-block">
		<select class="form-control" data-bind="select2: selectedItem,
			'selections': select2Data,
			'selectionsValue': 'value',
			'selectionsText': 'name',
			'allowClear': true,
			'autocomplete': true,
			'placeholder': 'Choose item'"></select>
	</div>
</div>


@section css {
	<link href="@Url.Content("~/node_modules/select2/dist/css/select2.min.css")" rel="stylesheet" />
	<link href="@Url.Content("~/src/select2/css/select2.css")" rel="stylesheet" />
}

@section scripts {
	<script src="@Url.Content("~/node_modules/select2/dist/js/select2.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/content/app/select2/main.js")" type="text/javascript"></script>

	<script type="text/javascript">
		var t = tenogy;

		t.i("select2/main", function(m) {
			var config = @Html.ToJson(new
			{
				model = new
				{
					items = Model.Items
				}
			});

			t.applyBindings(new m.Select2Page(config), "#select2Page");
		});
	</script>
}


